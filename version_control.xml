<?xml version="1.0" encoding="UTF-8"?>
<project name="increment_build_number" default="stamp build.date">
    <description>
        Auto increment build number in a current.ver file.
    </description>

    <macrodef name="property-calc">
        <attribute name="name"/>
        <attribute name="value"/>
        <sequential>
            <script language="javascript">
                if("@{value}" == "date") {
                    var today = new Date();
                    project.setProperty("@{name}", today.getDate()+'/'+(today.getMonth()+1)+'/'+today.getFullYear()+' '+today.getHours() + ":" + (today.getMinutes()>9?today.getMinutes():"0"+today.getMinutes()));
                } else {
                    project.setProperty("@{name}", eval(@{value}));
                }
            </script>
        </sequential>
    </macrodef>

    <property name="current.ver" location="front/src/main/resources/version.property"/>
    <property name="current.ver.building" location="out/production/front/version.property"/>
    <property name="copy.to.lib" value="out/production/pjt-lib"/>
    <property name="copy.to.api" value="api/src/main/resources"/>
    <property name="kudu.css.path" value="front/src/main/webapp/resources/css"/>
    <property file="${current.ver}"/>

    <target name="increment version.number">
        <property-calc name="version.number" value="${version.number} + 1"/>
        <replaceregexp file="${current.ver}"
                       match="version\.number\=.*"
                       replace="version.number=${version.number}"
                       byline="true"
        />
        <replaceregexp file="${current.ver}"
                       match="\#\/\* Current\: .* \*\/"
                       replace="#/* Current: ${project.name} ${version.name} ${version.number}.${revision.number}.${build.number} build ${build.date} */"
                       byline="true"/>
    </target>

    <target name="increment revision.number">
        <property-calc name="revision.number" value="${revision.number} + 1"/>
        <replaceregexp file="${current.ver}"
                       match="revision\.number\=.*"
                       replace="revision.number=${revision.number}"
                       byline="true"
        />
        <replaceregexp file="${current.ver}"
                       match="\#\/\* Current\: .* \*\/"
                       replace="#/* Current: ${project.name} ${version.name} ${version.number}.${revision.number}.${build.number} build ${build.date} */"
                       byline="true"/>

        <replaceregexp file="${current.ver}"
                       match="build\.number\=.*"
                       replace="build.number=0"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="build\.number\=.*"
                       replace="build.number=0"
                       byline="true"/>
        <copy file="${current.ver}" todir="${copy.to.lib}"/>
        <copy file="${current.ver}" todir="${copy.to.api}"/>
    </target>

    <target name="increment build.number">
        <property-calc name="build.number" value="${build.number} + 1"/>
        <replaceregexp file="${current.ver}"
                       match="build\.number\=.*"
                       replace="build.number=${build.number}"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="build\.number\=.*"
                       replace="build.number=${build.number}"
                       byline="true"/>
        <property-calc name="build.date" value="date"/>
        <replaceregexp file="${current.ver}"
                       match="build\.date\=.*"
                       replace="build.date=${build.date}"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="build\.date\=.*"
                       replace="build.date=${build.date}"
                       byline="true"/>
        <replaceregexp file="${current.ver}"
                       match="\#\/\* Current\: .* \*\/"
                       replace="#/* Current: ${project.name} ${version.name} ${version.number}.${revision.number}.${build.number} build ${build.date} */"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="\#\/\* Current\: .* \*\/"
                       replace="#/* Current: ${project.name} ${version.name} ${version.number}.${revision.number}.${build.number} build ${build.date} */"
                       byline="true"/>
        <copy file="${current.ver}" todir="${copy.to.lib}"/>
        <copy file="${current.ver}" todir="${copy.to.api}"/>
    </target>

    <target name="stamp build.date">
        <delete file="${kudu.css.path}/kudu.${version.number}.${revision.number}.${build.number}.css"/>
        <replaceregexp file="${current.ver}"
                       match="build\.number\=.*"
                       replace="build.number=${build.number}"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="build\.number\=.*"
                       replace="build.number=${build.number}"
                       byline="true"/>
        <property-calc name="build.date" value="date"/>
        <replaceregexp file="${current.ver}"
                       match="build\.date\=.*"
                       replace="build.date=${build.date}"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="build\.date\=.*"
                       replace="build.date=${build.date}"
                       byline="true"/>
        <replaceregexp file="${current.ver}"
                       match="\#\/\* Current\: .* \*\/"
                       replace="#/* Current: ${project.name} ${version.name} ${version.number}.${revision.number}.${build.number} build ${build.date} */"
                       byline="true"/>
        <replaceregexp file="${current.ver.building}"
                       match="\#\/\* Current\: .* \*\/"
                       replace="#/* Current: ${project.name} ${version.name} ${version.number}.${revision.number}.${build.number} build ${build.date} */"
                       byline="true"/>
        <copy file="${current.ver}" todir="${copy.to.lib}"/>
        <copy file="${current.ver}" todir="${copy.to.api}"/>
    </target>

    <target name="alias kudu.css">
        <copy overwrite="true" file="${kudu.css.path}/kudu.css" tofile="${kudu.css.path}/kudu.${version.number}.${revision.number}.${build.number}.css"/>
    </target>
</project>
